    <scm>
        <url>https://github.com/klenkes74/delphi-council</url>
        <connection>scm:git:git://github.com/klenkes74/delphi-council.git</connection>
        <developerConnection>scm:git:git@github.com:klenkes74/delphi-council.git</developerConnection>
        <tag>HEAD</tag>
