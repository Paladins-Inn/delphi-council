<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="removeperson" author="rlichti">
        <addColumn tableName="OPERATIVES">
            <column name="PLAYER" type="VARCHAR(100)" defaultValue="unknown">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="OPERATIVES_AUD">
            <column name="PLAYER" type="VARCHAR(100)"/>
        </addColumn>

        <sql>
            UPDATE OPERATIVES
            SET PLAYER=(
                select P.email
                from OPERATIVES O join PERSONS P on (O.PERSON_ID = P.ID)
            );
            UPDATE OPERATIVES_AUD
            SET PLAYER=(
                select P.email
                from OPERATIVES_AUD O join PERSONS P on (O.PERSON_ID = P.ID)
            );
        </sql>
        <dropForeignKeyConstraint baseTableName="PERSONS" constraintName="OPERATIVES_PERSONS_FK"/>
        <dropColumn tableName="OPERATIVES" columnName="PERSON_ID"/>
        <dropColumn tableName="OPERATIVES_AUD" columnName="PERSON_ID"/>


        <addColumn tableName="MISSIONREPORTS">
            <column name="GAME_MASTER" type="VARCHAR(100)" defaultValue="unknown">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="MISSIONREPORTS_AUD">
            <column name="GAME_MASTER" type="VARCHAR(100)"/>
        </addColumn>
        <sql>
            UPDATE MISSIONREPORTS
            SET GAME_MASTER=(
                select P.email
                from MISSIONREPORTS O join PERSONS P on (O.GM_ID = P.ID)
            );
            UPDATE MISSIONREPORTS_AUD
            SET GAME_MASTER=(
                select P.email
                from MISSIONREPORTS_AUD O join PERSONS P on (O.GM_ID = P.ID)
            );
        </sql>
        <dropColumn tableName="MISSIONREPORTS" columnName="GM_ID"/>
        <dropColumn tableName="MISSIONREPORTS_AUD" columnName="GM_ID"/>


        <addColumn tableName="SPECIALMISSIONS">
            <column name="GAME_MASTER" type="VARCHAR(100)" defaultValue="unknown">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="SPECIALMISSIONS_AUD">
            <column name="GAME_MASTER" type="VARCHAR(100)"/>
        </addColumn>
        <sql>
            UPDATE SPECIALMISSIONS
            SET GAME_MASTER=(
                select P.email
                from SPECIALMISSIONS O join PERSONS P on (O.GM = P.ID)
            );
            UPDATE SPECIALMISSIONS_AUD
            SET GAME_MASTER=(
                select P.email
                from SPECIALMISSIONS_AUD O join PERSONS P on (O.GM = P.ID)
            );
        </sql>
        <dropColumn tableName="SPECIALMISSIONS" columnName="GM"/>
        <dropColumn tableName="SPECIALMISSIONS_AUD" columnName="GM"/>


        <dropTable tableName="PERSONS"/>
        <dropTable tableName="PERSONS_AUD"/>
        <dropTable tableName="ROLES"/>
        <dropTable tableName="CONFIRMATIONTOKENS"/>
        <dropTable tableName="PWRESETTOKENS"/>
    </changeSet>
</databaseChangeLog>