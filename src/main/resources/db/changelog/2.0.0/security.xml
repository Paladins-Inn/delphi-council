<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="removerolestable" author="rlichti">
        <addColumn tableName="PERSONS">
            <column name="ROLES" type="VARCHAR(200)" defaultValue="PERSON" afterColumn="PASSWORD">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="PERSONS_AUD">
            <column name="ROLES" type="VARCHAR(200)" afterColumn="PASSWORD"/>
        </addColumn>

        <sql>
            # noinspection SqlWithoutWhere
            UPDATE PERSONS P INNER JOIN ROLES R
            SET P.ROLES=(
                select D.ROLES
                from (
                         SELECT I.PERSON_ID ID, GROUP_CONCAT(I.ROLE SEPARATOR ',') as ROLES
                         FROM ROLES I
                         GROUP BY I.PERSON_ID) D
                where P.ID = D.ID
            );
        </sql>

        <dropTable tableName="ROLES"/>
    </changeSet>
</databaseChangeLog>